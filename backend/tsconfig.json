{
    "compilerOptions": {
        "target": "ES2022",
        "module": "esnext", // Clean, modern module setting
        "moduleResolution": "bundler",
        "noEmit": true,
        "outDir": "./dist", // Temp directory for TSC if we run it instead of esbuild.
        "lib": [
            "ES2022"
        ], // Pure server environment
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
    },
    "include": [
        "src/**/*.ts"
    ]
}