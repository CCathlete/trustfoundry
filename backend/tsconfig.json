{
    "compilerOptions": {
        "target": "ES2024",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        // "noEmit": true,
        "noEmit": false,
        "outDir": "./dist",
        "lib": [
            "ES2024"
        ], // Pure server environment
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        // "strict": true,
        "strict": false,
        "alwaysStrict": false,
        "skipLibCheck": true,
        "sourceMap": true,
    },
    "include": [
        "src/**/*.ts",
    ]
}